<!doctype html>
<html ng-app="shortly">
  <head>
    <meta charset="utf-8" />
    <title>Shortly</title>
    <link rel="stylesheet" type="text/css" href="style.css">

  </head>

  <body>
    <h1>Shortly</h1>
    <input ng-model="name" type="text" default="this works"></input>
    <h2>{{ name }}</h2>

    <div ng-controller="createController">
    <form>
      <input ng-model=".url" class='text' type='text' name='url'>
      <input type='submit' value='Shorten'>
    </form>
      <img class='spinner' src='/spiffygif_46x46.gif'>
      <div class='message'></div>
    </div>

    <div ng-controller="linksController">
      <div ng-repeat="link in links" class = "link">
        <div class='info'>
        <img src='/redirect_icon.png'/>
          <div class='visits'><span class='count'>{{link.visits}}</span>Visits</div>
          <div class='title'>{{link.title}}</div>
          <div class='original'>{{link.url}}</div>
          <a href='{{link.base_url}}/{{link.code}}'>{{link.base_url}}/{{link.code}}</a>
        </div>
      </div>
    </div>

    <script type="text/javascript" src="bower_components/angular/angular.js"></script>
    <script type="text/javascript" src="bower_components/angular-route/angular-route.js"></script>
    <script type="text/javascript" src="client/js/app.js"></script>
  </body>
</html>
